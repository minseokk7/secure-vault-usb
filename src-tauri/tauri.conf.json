{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SecureVault",
  "version": "1.0.0",
  "identifier": "com.securevault.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5177",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "üîí SecureVault - Î≥¥Ïïà ÌååÏùº Îß§ÎãàÏ†Ä",
        "width": 600,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": false,
        "maximizable": true,
        "center": true,
        "decorations": false,
        "transparent": false,
        "dragDropEnabled": true,
        "fullscreen": false,
        "maximized": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: asset: http://asset.localhost; media-src 'self' blob: asset: http://asset.localhost; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/**"
        ]
      }
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false,
        "languages": [
          "Korean"
        ],
        "installerHooks": "installer/hooks.nsi",
        "headerImage": "icons/icon.png",
        "sidebarImage": "icons/128x128.png"
      }
    }
  }
}